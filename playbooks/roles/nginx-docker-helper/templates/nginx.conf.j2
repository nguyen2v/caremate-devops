{% if ssl_enabled %}
upstream server {
  server server:8103;
}

upstream ai-scribe {
  server ai-scribe:8000;
}

upstream care-assistant {
  server care-assistant:3002;
}

upstream caremate-agent {
  server caremate-agent:11000;
}

upstream caremate-mcp {
  server cengine-api:5000;
}

upstream cengine-api {
  server cengine-api:8000;
}

upstream mental-care {
  server mental-care:8000;
}

upstream neo4j-browser {
  server neo4j:7474;
}

upstream neo4j-server {
  server neo4j:7687;
}
{% endif %}

server {
  listen 80;
  server_name {{ domain_name }};

  {% if not ssl_enabled %}
  location /.well-known/acme-challenge/ {
    root /var/www/certbot;
  }
  {% endif %}

  location / {
    return 301 https://$host$request_uri;
  }
}

{% if ssl_enabled %}
server {
  listen 443 ssl;
  server_name {{ domain_name }};

  ssl_certificate     /etc/letsencrypt/live/{{ domain_name }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{ domain_name }}/privkey.pem;

  root /usr/share/nginx/html;
  index index.html;

  # Required for streaming
  proxy_http_version 1.1;
  proxy_set_header Connection '';

  # Don't buffer responses
  proxy_buffering off;
  proxy_cache off;
  proxy_set_header Host $host;
  proxy_set_header X-Real-IP $remote_addr;
  proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_set_header X-Forwarded-Proto $scheme;

  # Optional: increase timeouts if needed
  proxy_read_timeout 3600s;
  proxy_send_timeout 3600s;
  send_timeout 3600s;

  location /ai-scribe/ {
    proxy_pass http://ai-scribe/;
  }

  location /care-assistant/ {
    proxy_pass http://care-assistant/;

    # WebSocket support
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $http_connection;
  }

  location /agents/ {
    proxy_pass http://caremate-agent/;
  }

  location /caremate-mcp/ {
    proxy_pass http://caremate-mcp/;
  }

  location /cengine/ {
    proxy_pass http://cengine-api/;
  }

  location /mental-care/ {
    proxy_pass http://mental-care/;
  }

  location / {
    proxy_pass http://server;

    # WebSocket support
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $http_connection;
  }
}

server {
  listen 7474 ssl;

  ssl_certificate     /etc/letsencrypt/live/{{ domain_name }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{ domain_name }}/privkey.pem;

  location / {
    proxy_pass http://neo4j-browser/;

    proxy_set_header Access-Control-Allow-Origin *;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }
}

server {
  listen 7687 ssl;

  ssl_certificate     /etc/letsencrypt/live/{{ domain_name }}/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/{{ domain_name }}/privkey.pem;

  location / {
    proxy_pass http://neo4j-server/;

    proxy_set_header Access-Control-Allow-Origin *;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

    # WebSocket support
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $http_connection;
  }
}
{% endif %}
